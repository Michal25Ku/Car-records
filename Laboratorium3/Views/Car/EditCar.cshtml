@using Laboratorium3.Models
@model Car
<h2>Edycja pojazdu</h2>
<form asp-action="EditCar" asp-controller="Car" method="post">
    @*<div asp-validation-summary="All"></div>*@
    <div>
        Dane samochodu:
        <div>
            <label asp-for="Model">Model samochodu</label>
            <input class="form-control" type="text" asp-for="Model" value="@Model.Model"/>
            <div>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="Producer">Producent samochodu</label>
            <input class="form-control" type="text" asp-for="Producer" value="@Model.Producer" />
            <div>
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="EngineCapacity">Pojemnosc silnika</label>
            <input class="form-control" type="number" asp-for="EngineCapacity" step="0.1" value="@Model.EngineCapacity" />
            <div>
                <span asp-validation-for="EngineCapacity" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="EnginePower">Moc silnika</label>
            <input class="form-control" type="number" asp-for="EnginePower" value="@Model.EnginePower" />
            <div>
                <span asp-validation-for="EnginePower" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="EngineType">Typ silnika</label>
            <input class="form-control" type="text" asp-for="EngineType" value="@Model.EngineType" />
            <div>
                <span asp-validation-for="EngineType" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="LicensePlateNumber">Numer rejestracyjny samochodu</label>
            <input class="form-control" type="text" asp-for="LicensePlateNumber" value="@Model.LicensePlateNumber" />
            <div>
                <span asp-validation-for="LicensePlateNumber" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <label asp-for="State"></label>
            <select class="form-control" asp-for="State" asp-items="@(Html.GetEnumSelectList<State>())"></select>
            <div>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div>
            <select class="form-control" asp-for="OwnerId" asp-items="@Model.Owners"></select>
        </div>
    </div>
    <button type="submit">Zapisz</button>
</form>