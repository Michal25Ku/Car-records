@model List<Car>

<h2>Lista samochodów</h2>
@if(Model.Count > 0)
{
<table class="table">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Model)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Producer)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].LicensePlateNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Owner.FirstName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Owner.LastName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model[0].Priority)
        </th>
        <th scope="col">

        </th>
    </tr>
    @foreach (var car in @Model)
    {
        <tr>
            <td>
                @car.Model
            </td>
            <td>
                @car.Producer
            </td>
            <td>
                @car.LicensePlateNumber
            </td>
            <td>
                @car.Owner.FirstName
            </td>
            <td>
                @car.Owner.LastName
            </td>
            <td>
                @car.Priority.GetDisplayName()
            </td>
            <td>
                <a class="btn btn-primary"
                    asp-action="EditCar"
                    asp-controller="Car"
                    asp-route-id=@car.Id>
                    Edytuj
                </a>
                <a class="btn btn-primary"
                    asp-action="DetailsCar"
                    asp-controller="Car"
                    asp-route-id=@car.Id>
                    Szczegoly
                </a>
                <a class="btn btn-primary"
                    asp-action="DeleteCar"
                    asp-controller="Car"
                    asp-route-id=@car.Id>
                    Usun
                </a>
            </td>
        </tr>
    }
</table>
}
